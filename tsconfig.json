{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["DOM", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "noEmit": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"]
}